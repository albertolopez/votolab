{% extends '::base.html.twig' %}
{% block body %}
    <ol class="breadcrumb">
        <li><a href="{{ path('votolab_elections') }}">{{ 'elections'|trans|capitalize}}</a></li>
        <li class="active">{{ election.title }}</li>
    </ol>
    <div class="panel panel-primary">
        <div class="panel-heading">{{ 'editElections.choose_a_candidate_to_valore_in'|trans|capitalize}} <b>{{ election.title }}</b>
            {% if is_granted('ROLE_ADMIN') %}
                <a type="button" class="btn btn-success btn-sm pull-right" href="{{ path('votolab_admin') }}">
                    <span class="glyphicon glyphicon-plus"></span> {{ 'admin_panel'|trans|capitalize}}
                </a>
            {% endif %}
        </div>
        <div class="panel-body">
            <div class="well-sm">
                <div class="row">
                    {% for candidate in candidates %}
                        <div class="col-md-6">{{ include ('VotolabBundle:Elections:candidate.html.twig') }}</div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block viewScripts %}
    <script src="{{ asset('bundles/rcpx/js/jquery.barrating.min.js') }}"></script>
    <script src="{{ asset('bundles/rcpx/js/views/election.js') }}"></script>
{% endblock %}