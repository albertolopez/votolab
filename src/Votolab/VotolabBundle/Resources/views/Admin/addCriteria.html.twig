{% extends '::base.html.twig' %}
{% block body %}
    <ol class="breadcrumb">
        <li><a href="{{ path('votolab_admin') }}">Elecciones</a></li>
        <li><a href="{{ path('votolab_list_criterias', {'slug': election.slug}) }}">Criterios</a></li>
        <li class="active">Añadir / Editar criterio en {{ election.title }}</li>
    </ol>

    <div class="panel panel-primary">
        <div class="panel-heading">Añadir / Editar criterios</div>
        <div class="panel-body">
            <div>
                {{ form_start(form, {'attr': {'class': 'form-horizontal' }}) }}
                {{ form_errors(form) }}
                <p>
                    <label>{{ form_label(form.criterion) }}</label>
                    <span class="field">{{ form_widget(form.criterion,  {'attr': {'class': 'form-control' }}
                        ) }} {{ form_errors(form.criterion) }}</span>
                </p>

                <p>
                    <label>{{ form_label(form.min) }}</label>
                    <span class="field">{{ form_widget(form.min,  {'attr': {'class': 'form-control' }}
                        ) }} {{ form_errors(form.min) }}</span>
                </p>

                <p>
                    <label>{{ form_label(form.max) }}</label>
                    <span class="field">{{ form_widget(form.max,  {'attr': {'class': 'form-control' }}
                        ) }} {{ form_errors(form.max) }}</span>
                </p>

                <p class="stdformbutton">
                    <button class="btn btn-primary">Submit Button</button>
                    <button type="reset" class="btn">Reset Button</button>
                </p>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}