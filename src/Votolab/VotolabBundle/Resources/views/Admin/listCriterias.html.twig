{% extends '::base.html.twig' %}
{% block body %}
    <ol class="breadcrumb">
        <li><a href="{{ path('votolab_admin') }}">Elecciones</a></li>
        <li class="active">Criterios</li>
    </ol>

    <div class="panel panel-primary">
        <div class="panel-heading">Listado de Criterios
            <a type="button" class="btn btn-success btn-sm pull-right"
               href="{{ path('votolab_add_criteria', {'slug': election.slug}) }}">
                <span class="glyphicon glyphicon-plus"></span> Añadir Criterio
            </a>
        </div>
        <div class="panel-body">

            <table class="table">
                <thead>
                <th>Nombre</th>
                <th>Mínimo</th>
                <th>Máximo</th>
                <th></th>
                <th></th>
                </thead>
                <tbody>
                {% for criteria in criterias %}
                    <tr>
                        <td>{{ criteria.criterion }}</td>
                        <td>{{ criteria.min }}</td>
                        <td>{{ criteria.max }}</td>
                        <td><a type="button" class="btn btn-primary btn-sm" href="{{ path('votolab_edit_criteria', {'slug': election.slug, 'id': criteria.id}) }}"><span class="glyphicon glyphicon-edit"></span> Editar</a>
                        </td>
                        <td><a type="button" class="btn btn btn-danger btn-sm" href="{{ path('votolab_delete_criteria', {'slug': election.slug, 'id': criteria.id}) }}"><span class="glyphicon glyphicon-trash"></span> Borrar</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}