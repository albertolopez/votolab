{% block fos_user_content %}
    {% if error %}
        <div class="alert alert-danger top-buffer">{{ error|trans }}</div>
    {% endif %}

    <form action="{{ path("fos_user_security_check") }}" method="post" class="securityForm row" role="form">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

        <div class="form-group">
            <label for="username">{{ 'security.login.email'|trans }}</label>
            <input class="form-control"  type="text" id="username" name="_username" value="{{ last_username }}"
                   required="required"/>
        </div>

        <div class="form-group">
            <label for="password">{{ 'security.login.password'|trans }}</label>
            <input class="form-control" type="password" id="password" name="_password" required="required"/>
        </div>

        <input class="securityButton col-md-12" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"/>
    </form>

{% endblock fos_user_content %}
